@model GreenAndGo.Models.QueryViewModel

@using (Html.BeginForm("Index", "Quote", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DestinationPostcode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DestinationPostcode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OriginPostcode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OriginPostcode, new { @class = "form-control" })
        </div>
    </div>
     <div class="form-group">
            @Html.LabelFor(m => m.Collection, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Collection, new { @class = "form-control", Value=DateTime.Now.AddHours(2)})
            </div>
        </div>
        @(Html.EditorFor(m => m.Parcels[0]))
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get a Quote!" class="btn btn-default" />
        </div>
    </div>
}
